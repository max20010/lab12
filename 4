#include "stdafx.h"
#include "iostream"
using namespace std;
int Quarter(int& x,int& y) {
	int i;
	if (y > 0) {
		if (x > 0) {
			i=1;
		}
		else if (x<0){
			i=2;
		}
	}else{
		if (x < 0) {
			i = 3;
		}else{
			i = 4;
		}
	}
	return i;
}
int main()
{
	setlocale(LC_ALL, "ru");
	int x,y;
	for (int i = 0;i < 4;i++) {
		cout << "Введите x: ";
		cin >> x;
		cout << "Введите y: ";
		cin >> y;
		if(x!=0&&y!=0)
		cout << "Точка с координатами ("<<x<<","<<y<<") находится в "<<Quarter(x, y) <<" четверти."<< endl;
	}
}
